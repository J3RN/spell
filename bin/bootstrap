#!/usr/bin/env ruby

# Simply bundle
`bundle install`

require "redis"

redis = Redis.new

# Add words from provided 'words.txt'
all_words = File.read("words.txt").split(/\n/)
non_letter_words = all_words.select { |word| word.length > 1 }
flat_set = non_letter_words.map { |x| [x, 0] }.flatten
redis.hmset("words", *flat_set)
